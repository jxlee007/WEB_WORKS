const collabs = [
	{
		title: "pm â™¦ theory 11",
		subtitle: "privacy playing cards",
		image: "/images/collabs/collab-pg-1.jpg",
		href: "#",
	},
	{
		title: "pm X nomantic",
		subtitle: "camera bags",
		image: "/images/collabs/collab-pg-2.jpg",
		href: "#",
	},
	{
		title: "pm X polar pro",
		subtitle: "premium lens filters",
		image: "/images/collabs/collab-pg-3.jpg",
		href: "#",
	},
	{
		title: "pm X clocks + colours",
		subtitle: "premium lens filters",
		image: "/images/collabs/collab-pg-4.jpg",
		href: "#",
	},
	{
		title: "pm X james coffee",
		subtitle: "signature coffee & merch",
		image: "/images/collabs/collab-pg-5.jpg",
		href: "#",
	},
	{
		title: "pm X angels and airways",
		subtitle: "documentary coming-soon",
		image: "/images/collabs/collab-pg-6.jpg",
		href: "#",
	},
	{
		title: "pm X royal\ncanadian mint",
		subtitle: "moraine lake coin",
		image: "/images/collabs/collab-pg-7.jpg",
		href: "#",
	},
];
---

<Layout title="Collabs">

	<Nav logo="/images/digisign/ds1-black.png" />

	<main class="px-6 sm:px-12 py-12">
		<div class="max-w-5xl mx-auto">
			<h2
				class="text-center text-xl sm:text-2xl md:text-3xl font-normal tracking-wide uppercase mb-20"
			>
				Collabs
			</h2>

			<div class="space-y-10">
				{
					collabs.map((c) => (
						<article class="relative">
							<a href={c.href} class="block group">
								<img
									src={c.image}
									alt={c.title}
									class="w-full h-auto object-cover brightness-90 group-hover:brightness-95 transition"
								/>

								<div class="absolute inset-0 flex flex-col justify-start">
									<h1 class="mt-36 ml-16 text-white font-extrabold uppercase text-3xl sm:text-4xl md:text-5xl lg:text-6xl leading-tight drop-shadow-lg">
										{c.title.split("\n").map((s, i) => (
											<span class="block">{s}</span>
										))}
									</h1>
									<p class="mt-auto mb-8 ml-16 text-white uppercase text-xs sm:text-sm font-light tracking-widest">
										{c.subtitle}
									</p>
								</div>
							</a>
						</article>
					))
				}
			</div>
		</div>
	</main>

	<Footer />
</Layout>

<style>
	/* small fade-in for the page */
	main {
		animation: fadeIn 700ms ease-in-out both;
	}
	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}
</style>