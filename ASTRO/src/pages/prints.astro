---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

const data = [
  {
    category: "Automotive",
    items: [
      {
        img: "/images/prints/ford+gt+after.jpg",
        alt: "Ford GT print",
        title: "Ford GT",
        subtitle: "Limited edition (250)",
        extraImgClass: "",
            href: "/prints/ford-gt",
      },
      {
        img: "/images/prints/redbull.jpg",
        alt: "F1 Red Bull print",
        title: "F1 Red Bull",
        subtitle: "Sold out",
        extraImgClass: "",
            href: "/prints/redbull",
      },
    ],
  },
  {
    category: "Travel",
    items: [
      {
        img: "/images/prints/parisbanner3k.jpg",
        alt: "Paris print",
        title: "Paris",
        subtitle: "Limited edition (23)",
        extraImgClass: "",
            href: "/prints/paris",
      },
    ],
  },
  {
    category: "Winter Series",
    items: [
      {
        img: "/images/prints/mfog.jpg",
        alt: "Morning Fog print",
        title: "Morning Fog",
        subtitle: "Limited edition (250)",
        extraImgClass: "",
            href: "/prints/morning-fog",
      },
      {
        img: "/images/prints/bucket+shot.jpg",
        alt: "The Bucket Shot print",
        title: "The Bucket Shot",
        subtitle: "Sold out",
        extraImgClass: "",
            href: "/prints/the-bucket-shot",
      },
      {
        img: "/images/prints/strenght.jpg",
        alt: "Strength In Numbers print",
        title: "Strength In Numbers",
        subtitle: "Limited edition (250)",
        extraImgClass: "",
            href: "/prints/strength-in-numbers",
      },
    ],
  },
];
---

<Layout title="PM Prints â€” Limited Edition">
  <main class="px-4 sm:px-8 py-12">
    <div class="w-full"><Nav logo="/images/digisign/ds1-black.png" /></div>

    <!-- Hero -->
    <section class="mt-8">
      <div class="relative max-w-6xl mx-auto overflow-hidden">
        <img
          src="/images/prints/saltflats.jpg"
          alt="Official PM Prints"
          class="w-full h-56 sm:h-72 md:h-96 object-cover brightness-90"
        />
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="px-6 sm:px-12">
            <h1
              class="text-white font-extrabold uppercase text-3xl sm:text-4xl md:text-7xl leading-tight tracking-tight"
            >
              Official PM Prints
            </h1>
            <p class="text-white/90 mt-3 uppercase text-sm sm:text-base">
              Numbered limited editions
            </p>
          </div>
        </div>
      </div>
    </section>

    <div class="max-w-6xl mx-auto mt-12">
      {
        data.map((cat, cIdx) => (
          <div>
            <div class="text-center">
              <hr class="border-t border-gray-300 w-24 mx-auto mb-6" />
              <p class="uppercase text-sm tracking-widest text-gray-500">
                {cat.category}
              </p>
            </div>

            {cat.items.map((item, iIdx) => (
              <article
                class={`relative mt-8 ${cIdx === data.length - 1 && iIdx === cat.items.length - 1 ? "mb-12" : ""}`}
              >
                <a href={item.href} class="group block no-underline" aria-label={item.title}>
                  <img
                    src={item.img}
                    alt={item.alt}
                    class={`w-full h-48 sm:h-64 md:h-72 lg:h-80 object-cover brightness-90 transition-transform duration-300 group-hover:scale-105 ${item.extraImgClass ?? ""}`}
                  />

                  <div class="absolute inset-0 flex items-center ml-28 pointer-events-none">
                    <div class="px-6 sm:px-12 pt-8">
                      <h2 class="text-white font-extrabold text-2xl sm:text-4xl md:text-7xl uppercase ">
                        {item.title}
                      </h2>
                      <p class="text-white/90 mt-2 text-md sm:text-lg uppercase">
                        {item.subtitle}
                      </p>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>
        ))
      }
    </div>

    <Footer />
  </main>
</Layout>