---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import { products } from "./shop/products.js";




---

<Layout title="Shop - All Products">
    
    
    <main class="px-4 sm:px-8 py-16">
  <div class="w-full h-20" >
    <Nav logo="/images/digisign/ds1-black.png" />
  </div>
    <div class="max-w-7xl mx-auto space-y-8">
      {products.map((product) => (
        <div class="relative flex justify-center py-4">
          <a 
            href={`/shop/${product.slug}`}
            target={product.target || "_self"}
            rel={product.target ? "noopener noreferrer" : undefined}
            class="relative block w-full max-w-6xl group"
          >
            <img 
              src={product.image} 
              alt={product.title}
              class="w-full h-auto brightness-90 group-hover:brightness-95 transition duration-200"
            />
            
            <!-- Text overlay -->
            <div class="absolute top-[40%] left-[10%] pointer-events-none">
              <h1 class="text-white font-extrabold uppercase text-4xl sm:text-5xl md:text-6xl lg:text-7xl leading-tight px-4 sm:px-8">
                {product.title}
              </h1>
            </div>
            
            <div class="absolute top-[60%] left-[13.5%] pointer-events-none">
              <h5 class="text-white uppercase text-xs sm:text-sm md:text-base lg:text-lg font-light tracking-wide">
                {product.subtitle}
              </h5>
            </div>
          </a>
        </div>
      ))}
    </div>
  </main>

  <Footer />
</Layout>

<style>
  /* Fade-in animation for page load */
  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
  
  main {
    animation: fadeIn 1s ease-in-out forwards;
  }
</style>
