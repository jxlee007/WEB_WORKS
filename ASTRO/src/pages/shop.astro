---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

const products = [
  {
    title: "photo presets",
    subtitle: "custom preset pack for adobe lightroom cc.",
    image: "/images/shop/shop-1.jpg",
    href: "/photo-preset"
  },
  {
    title: "pm prints",
    subtitle: "limited edition archival prints.",
    image: "/images/shop/shop-2.jpg",
    href: "/prints"
  },
  {
    title: "motion gfx",
    subtitle: "4 custom packs of effects for videos",
    image: "/images/shop/shop-3.jpg",
    href: "/motion-gfx"
  },
  {
    title: "video luts",
    subtitle: "color gradient tools for adobe premiere cc, fcpx, ae.",
    image: "/images/shop/shop-4.jpg",
    href: "/luts"
  },
  {
    title: "sound packs",
    subtitle: "killer sounds to take your project to the next level.",
    image: "/images/shop/shop-5.jpg",
    href: "/sound-packs"
  },
  {
    title: "pm gear",
    subtitle: "custom made products.",
    image: "/images/shop/shop-6.jpg",
    href: "/gear"
  },
  {
    title: "jack's pirate life",
    subtitle: "limited edition drops - fly the flag.",
    image: "/images/shop/shop-7.jpg",
    href: "/pirates-life",
    target: "_blank"
  }
];




---

<Layout title="Shop - All Products">
    
    
    <main class="px-4 sm:px-8 py-16">
  <div class="w-full h-20" >
    <Nav logo="/images/digisign/ds1-black.png" />
  </div>
    <div class="max-w-7xl mx-auto space-y-8">
      {products.map((product) => (
        <div class="relative flex justify-center py-4">
          <a 
            href={product.href}
            target={product.target || "_self"}
            rel={product.target ? "noopener noreferrer" : undefined}
            class="relative block w-full max-w-6xl group"
          >
            <img 
              src={product.image} 
              alt={product.title}
              class="w-full h-auto brightness-90 group-hover:brightness-95 transition duration-200"
            />
            
            <!-- Text overlay -->
            <div class="absolute top-[40%] left-[10%] pointer-events-none">
              <h1 class="text-white font-extrabold uppercase text-4xl sm:text-5xl md:text-6xl lg:text-7xl leading-tight px-4 sm:px-8">
                {product.title}
              </h1>
            </div>
            
            <div class="absolute top-[60%] left-[13.5%] pointer-events-none">
              <h5 class="text-white uppercase text-xs sm:text-sm md:text-base lg:text-lg font-light tracking-wide">
                {product.subtitle}
              </h5>
            </div>
          </a>
        </div>
      ))}
    </div>
  </main>

  <Footer />
</Layout>

<style>
  /* Fade-in animation for page load */
  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
  
  main {
    animation: fadeIn 1s ease-in-out forwards;
  }
</style>
